<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/ClearButton"
        android:layout_width="130dp"
        android:layout_height="52dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:onClick="clearText"
        android:text="CLEAR"
        android:textSize="18sp"
        app:backgroundTint="#2196F3"
        app:layout_constraintBottom_toTopOf="@+id/RupeeHeading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DollarAmount"
        app:layout_constraintVertical_bias="0.496" />

    <TextView
        android:id="@+id/RupeeHeading"
        android:layout_width="372dp"
        android:layout_height="63dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Currency In Rupees"
        android:textColor="#1E1E1E"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/RupeeAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/RupeeAmount"
        android:layout_width="299dp"
        android:layout_height="58dp"
        android:layout_marginBottom="90dp"
        android:ems="10"
        android:hint="Rupees"
        android:inputType="textPersonName"
        android:paddingLeft="6sp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nav"
        android:layout_width="411dp"
        android:layout_height="59dp"
        android:background="#F44336"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Currency Converter"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DollarHeading"
        android:layout_width="372dp"
        android:layout_height="63dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Currency In Dollars"
        android:textColor="#1E1E1E"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav" />

    <EditText
        android:id="@+id/DollarAmount"
        android:layout_width="299dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Dollars"
        android:inputType="textPersonName"
        android:paddingLeft="6sp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DollarHeading" />

    <Button
        android:id="@+id/ConvertButton"
        android:layout_width="130dp"
        android:layout_height="52dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:onClick="convert"
        android:text="CONVERT"
        android:textSize="18sp"
        app:backgroundTint="#F44336"
        app:layout_constraintBottom_toTopOf="@+id/RupeeHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DollarAmount" />

    <TextView
        android:id="@+id/mymessage"
        android:layout_width="356dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ClearButton" />

</androidx.constraintlayout.widget.ConstraintLayout>